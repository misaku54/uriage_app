<% provide(:title, 'ユーザー管理') %>
<nav style="--bs-breadcrumb-divider: '>';" aria-label="パンくずリスト">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to 'ホーム', root_path, data: { turbo: false } %></li>
    <li class="breadcrumb-item active" aria-current="page">ユーザー管理</li>
  </ol>
</nav>
<div class="card shadow-sm mb-3">
  <div class="card-body">
  <h6 class="mb-3">検索条件</h6>
  <%= search_form_for @q, url: admin_users_path, class: "mt-3" do |f| %>
    <div class="form_group row mb-2">
      <%= f.label :name_cont, '名前', class: "col-sm-2 col-form-label"%>
      <div class="col-sm-6">
        <%= f.search_field :name_cont, class: "form-control" %>
      </div>
    </div>
    <div class="form_group row mx-auto">
      <%= f.submit '検索', class: "btn btn-primary col-sm-3 me-2 mb-2" %>
      <%= link_to 'クリア', admin_users_path, class: "btn btn-outline-secondary col-sm-3 mb-2", data: { turbo: false } %>
    </div>
  <% end %>
  </div>
</div>
<div class="card shadow-sm">
  <div class="card-body">
    <h6 class="mb-3"><%="一覧（#{current_page_number(@users)}）" %></h6>
    <div class="table-responsive text-nowrap">
      <table class="table">
        <thead>
          <tr>
            <th><%= User.human_attribute_name(:name) %></th>
            <th><%= User.human_attribute_name(:email) %></th>
            <th><%= User.human_attribute_name(:created_at) %></th>
            <th><%= User.human_attribute_name(:updated_at) %></th>
            <th><%= User.human_attribute_name(:admin) %></th>
            <th>
              <div class="d-flex justify-content-end" >
                <%= link_to admin_signup_path, data: { turbo: false } do %>
                  <i class="fa-solid fa-plus"></i>
                <% end %>
              </div>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= link_to user.name, admin_user_path(user), data: { turbo: false } %></td>
              <td><%= user.email %></td>
              <td><%= user.created_at.strftime('%Y/%m/%d %H:%M')  %></td>
              <td><%= user.updated_at.strftime('%Y/%m/%d %H:%M') %></td>
              <td><%= user.admin? ? '管理者' : '一般' %></td>
              <td>
                <% if current_user.admin? && !current_user?(user) %>
                  <div class="d-flex justify-content-end">
                    <%= link_to edit_admin_user_path(user), data: { turbo: false } do %>
                      <i class="fa-solid fa-pen fa-fw"></i>
                    <% end %>
                    <span>&nbsp;&nbsp;&nbsp;&nbsp;</span>
                    <%= link_to admin_user_path(user), data: {turbo_method: :delete, turbo_confirm: '本当によろしいですか？'} do %>
                      <i class="far fa-trash-alt"></i>
                    <% end %>                
                  </div>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="d-flex justify-content-end">
      <%= paginate @users %>
    </div>
  </div>
</div>