<div class="card shadow-sm mb-3" style="height: 300px;">
  <div class="card-body p-4">
    <h6 class="flex-grow-1">本日の売上</h6>
    <div class="d-flex flex-column text-center mt-5 mb-4">
      <% if @sales_total_amount.present? %>
        <h5 class="display-5 mb-0 font-weight-bold" style="color: #1C2331;"><%= add_comma(@sales_total_amount) %></h5>
      <% else %>
        <h5 class="display-5 mb-0 font-weight-bold" style="color: #1C2331;"><%= "-" %></h5>
      <% end %>
      <span class="small" style="color: #868B94">円</span>
    </div>
    <div class="d-flex align-items-center justify-content-end">
      <i class="fa-solid fa-coins fa-4x"></i>
    </div>
  </div>
</div>