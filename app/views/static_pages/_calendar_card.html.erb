<div class="card shadow-sm mb-3">
  <div class="card-body p-4">
  <h6 class="flex-grow-1">スケジュール</h6>
  <%= turbo_frame_tag 'calendar' do %>
    <% if @events.present? %>
      <%= week_calendar events: @events do |date, events| %>
        <div class="day d-flex justify-content-between align-items-center">
          <%= date.day %>
          <%= link_to new_user_event_path(@user, default_date: date), class: "btn btn-sm btn-outline-primary fs9", data: { turbo: false }  do %>
            <i class="fa-solid fa-plus"></i>
          <% end %>
        </div>
        <% events.each do |event| %>
            <div><small><%= event.title %></small></div>
        <% end %>
      <% end %>
    <% else %>
      <%= week_calendar do |date| %>
        <div class="day">
          <%= date.day %>
        </div>
      <% end %>
    <% end %>
  <% end %>
  </div>
</div>