<% provide(:title, '商品分類マスタ')%>
<ol class="breadcrumb">
  <li><%= link_to 'ホーム', root_path%></li>
  <li class="active">商品分類マスタ</li>
</ol>
<h1>商品分類マスタ</h1>
<%= render 'shared/search', q: @q, url: user_producttypes_path(@user), label: '商品名' %>
<%= current_page_number(@producttypes) %>
<%= link_to " + 追加", new_user_producttype_path(@user), class: "btn btn-success" %>
<div class="table-responsive">
<table class="table table">
	<thead>
		<tr>
			<th class="info" >No.</th>
			<th class="info" ><%= Producttype.human_attribute_name(:name) %></th>
			<th class="info" ><%= sort_link(@q, :created_at) %></th>
			<th class="info" ></th>
		</tr>
	</thead>
  <tbody>
    <% @producttypes.each.with_index(1) do |producttype, index| %>
      <tr>
        <td><%= index %></td>
        <td><%= producttype.name %></td>
        <td><%= producttype.created_at.strftime('%Y/%m/%d %H:%M')  %></td>
        <td>
          <%= link_to '編集', edit_user_producttype_path(@user, producttype), class: "btn btn-primary btn-xs" %>  
          <%= link_to "削除", user_producttype_path(@user, producttype), 
          data: {turbo_method: :delete, turbo_confirm: '本当によろしいですか？'}, class: "btn btn-danger btn-xs" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div class="text-center">
  <%= paginate @producttypes %>
</div>
