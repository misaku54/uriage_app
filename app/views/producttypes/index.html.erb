<% provide(:title, '商品分類マスタ')%>
<nav style="--bs-breadcrumb-divider: '>';" aria-label="パンくずリスト">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to 'ホーム', root_path %></li>
    <li class="breadcrumb-item active" aria-current="page">商品分類マスタ</li>
  </ol>
</nav>
<h1>商品分類マスタ</h1>
<%= render 'shared/search', q: @q, url: user_producttypes_path(@user), label: '商品名', list_name: 'producttype' %>
<div class="card shadow mt-3">
  <div class="card-header">
    一覧
  </div>
  <div class="card-body mx-3">
    <div class="row py-2">
      <div class="col-4 mt-auto" >
        <%= sort_link(@q, :name) %>
      </div>
      <div class="col-4 mt-auto" >
        <%= sort_link(@q, :created_at) %>
      </div>
      <div class="col-4 d-flex justify-content-end" >
        <div><%= current_page_number(@producttypes) %></div>
        <%= link_to " + 追加", new_user_producttype_path(@user), class: "btn btn-outline-primary" %>
      </div>
    </div>
    <%= render @producttypes %>
  </div>
  <div class="d-flex justify-content-end mt-3">
    <%= paginate @producttypes %>
  </div>
</div>


