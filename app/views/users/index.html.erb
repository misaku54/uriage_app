<% provide(:title, 'ユーザー一覧') %>
<h1>ユーザー一覧</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table table-bordered">
    	<thead>
    		<tr>
    			<th class="info" ><%= User.human_attribute_name(:name) %></th>
    		</tr>
    	</thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @users %>
  </div>
</div>
