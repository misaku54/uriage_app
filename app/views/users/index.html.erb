<% provide(:title, 'ユーザー一覧') %>
<h1>ユーザー一覧</h1>

<table class="table table-bordered">
	<thead>
		<tr>
			<th class="info" ><%= User.human_attribute_name(:name) %></th>
			<th class="info" ><%= User.human_attribute_name(:email) %></th>
			<th class="info" ><%= User.human_attribute_name(:created_at) %></th>
			<th class="info" ><%= User.human_attribute_name(:updated_at) %></th>
			<th class="info" ></th>
		</tr>
	</thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at %></td>
        <td><%= user.updated_at %></td>
        <td><%= link_to '削除', '#' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
