<% provide(:title, '売上一覧')%>
<nav style="--bs-breadcrumb-divider: '>';" aria-label="パンくずリスト">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to 'ホーム', root_path %></li>
    <li class="breadcrumb-item active" aria-current="page">売上一覧</li>
  </ol>
</nav>
<div class="card mt-3">
  <div class="card-header">
    検索条件
  </div>
  <div class="card-body mx-3">
  <%= search_form_for @q, url: user_sales_path(@user), class: "mb-5" do |f| %>
    <div class="form_group row">
      <%= f.label :maker_name_cont, 'メーカー名', class: "col-sm-2 col-form-label"%>
      <div class="col-sm-10">
        <%= f.search_field :maker_name_cont, class: "form-control" %>
      </div>
    </div>
    <div class="form_group row">
      <%= f.label :producttype_name_cont, '商品名', class: "col-sm-2 col-form-label"%>
      <div class="col-sm-10">
        <%= f.search_field :producttype_name_cont, class: "form-control" %>
      </div>
    </div>
    <div class="form_group row">
      <%= f.label :created_at_gteq, '開始日', class: "col-sm-2 col-form-label"%>
      <div class="col-sm-10">
        <%= f.date_field :created_at_gteq, class: "form-control" %>
      </div>
    </div>
    <div class="form_group row">
      <%= f.label :created_at_lteq_end_of_day, '終了日', class: "col-sm-2 col-form-label"%>
      <div class="col-sm-10">
        <%= f.date_field :created_at_lteq_end_of_day, class: "form-control" %>
      </div>
    </div>
    <div class="form_group">
      <%= f.submit '検索', class: "btn btn-primary" %>
    </div>
  <% end %>
  </div>
</div>
<div class="card mt-3">
  <div class="card-header">
    一覧
  </div>
  <div class="card-body">
    <div><%= current_page_number(@sales) %></div>
    <div class="table-responsive text-nowrap">
      <table class="table">
        <thead>
          <tr>
            <th><%= Sale.human_attribute_name(:maker_id) %></th>
            <th><%= Sale.human_attribute_name(:producttype_id) %></th>
            <th><%= Sale.human_attribute_name(:amount_sold) %></th>
            <th><%= Sale.human_attribute_name(:remark) %></th>
            <th><%= sort_link(@q, :created_at) %></th>
            <th>
              <div class="d-flex justify-content-end" >
                <%= link_to " + 追加", new_user_sale_path(@user), class: "btn btn-outline-primary" %>
              </div>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @sales.each do |sale| %>
            <tr>
              <td><%= sale.maker.present? ? sale.maker.name : '未登録' %></td>
              <td><%= sale.producttype.present? ? sale.producttype.name : "未登録" %></td>
              <td class="text-right"><%= add_comma_en(sale.amount_sold) %></td>
              <td><%= sale.remark %></td>
              <td><%= sale.created_at.strftime('%Y/%m/%d %H:%M')  %></td>
              <td>
                <div class="d-flex justify-content-end">
                  <%= link_to '編集', edit_user_sale_path(@user, sale), class: "btn btn-primary btn-xs" %>  
                  <%= link_to "削除", user_sale_path(@user, sale), 
                  data: {turbo_method: :delete, turbo_confirm: '本当によろしいですか？'}, class: "btn btn-danger btn-xs" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="d-flex justify-content-end">
      <%= paginate @sales %>
    </div>
  </div>
</div>