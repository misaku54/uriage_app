
<% if @no_result.present? %>
  <p><%= @no_result %></p>
<% end %>

<div class="row d-flex">
  <div class="col-md-8 col-lg-6 col-xl-4">
    <div class="card mb-3" style="height: 310px;">
      <div class="card-body p-4">
      
        <h6 class="flex-grow-1">日付</h6>
        <div class="d-flex flex-column text-center mt-5 mb-4">
          <h6 class="display-4 mb-0 font-weight-bold" style="color: #1C2331;"> 7月4日 </h6>
          <span class="small" style="color: #868B94">火曜日</span>
        </div>
        <div class="d-flex align-items-center justify-content-end">
          <i class="fa-regular fa-calendar fa-5x"></i>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-8 col-lg-6 col-xl-4">
    <div class="card mb-3" style="height: 310px;">
      <div class="card-body p-4">

        <h6 class="flex-grow-1">天気情報</h6>

        <div class="d-flex flex-column text-center mt-5 mb-4">
          <h6 class="display-4 mb-0 font-weight-bold" style="color: #1C2331;"> 13°C </h6>
          <span class="small" style="color: #868B94">晴れ</span>
        </div>

        <div class="d-flex align-items-center">
          <div class="flex-grow-1" style="font-size: 1rem;">
            <div>最大風速：<span class="ms-1"> 40 km/h
              </span></div>
            <div>降水確率： <span class="ms-1"> 84% </span>
            </div>
            <div>最高気温： <span class="ms-1"> 0.2h </span>
            </div>
            <div>最低気温： <span class="ms-1"> 0.2h </span>
            </div>
          </div>
          <div class="d-flex align-items-center justify-content-end">
            <i class="fa-solid fa-cloud-sun fa-5x"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-8 col-lg-6 col-xl-4">
    <div class="card mb-3" style="height: 310px;">
      <div class="card-body p-4">
        <h6 class="flex-grow-1">本日の売上</h6>
        <div class="d-flex flex-column text-center mt-5 mb-4">
          <% if @sales_total_amount.present? %>
            <h6 class="display-4 mb-0 font-weight-bold" style="color: #1C2331;"><%= add_comma(@sales_total_amount) %></h6>
          <% else %>
            <h6 class="display-4 mb-0 font-weight-bold" style="color: #1C2331;"><%= "-" %></h6>
          <% end %>
          <span class="small" style="color: #868B94">円</span>
        </div>
        <div class="d-flex align-items-center justify-content-end">
          <i class="fa-solid fa-sack-dollar fa-5x"></i>
        </div>
      </div>
    </div>
  </div>
</div>

<% if @sales_trend.present? %>
  <div class="card mb-3">

    <div class="card-body p-4">
      <h6 class="flex-grow-1">売上推移</h6>

      <p><%= line_chart @sales_trend , suffix: "円", thousands: "," %></p>
    </div>
  </div>
<% end %>

