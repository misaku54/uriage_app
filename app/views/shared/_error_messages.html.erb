<% if object.errors.any? %>
  <div class="card shadow-sm text-white bg-danger mb-3" id="error_explanation">
    <div class="card-header">エラーが<%= object.errors.count %>個あります。修正してください。</div>
    <div class="card-body bg-light">
      <ul>
        <% object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>