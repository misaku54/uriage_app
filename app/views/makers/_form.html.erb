<%= turbo_frame_tag maker do %>
  <%= bootstrap_form_with(model: [@user, maker]) do |f| %>
    <div class="row py-2 border-top">
      <div class="col-4">
        <%= f.text_field :name, 
                          skip_label: true,
                          label_as_placeholder: true,
                          wrapper: false,
                          control_class: "form-control form-control-sm" %>
      </div>
      <div class="col-4">
        <%# <%= maker.created_at.strftime('%Y/%m/%d %H:%M')  %>
      </div>
      <div class="col-4">
        <div class="d-flex justify-content-end">
          <%= f.submit yield(:button_text), class: "btn btn-primary" %>
          <%= link_to "キャンセル",  user_maker_path(@user), class: "btn btn-outline-secondary" %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>