<% provide(:title, 'メーカーマスタ') %>
<nav style="--bs-breadcrumb-divider: '';" aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to 'ホーム', root_path %></li>
    <li class="breadcrumb-item active" aria-current="page">メーカーマスタ</li>
  </ol>
</nav>
<h1>メーカーマスタ</h1>
<%= render 'shared/search', q: @q, url: user_makers_path(@user), label: 'メーカー名', list_name: 'maker' %>
<%= turbo_frame_tag "makers-list" do %>
  <%# <%= link_to " + 追加", new_user_maker_path(@user), class: "btn btn-success", id: "add-maker" %>
  <div class="card shadow mt-3">
    <div class="card-header">
      一覧
    </div>
    <div class="card-body mx-3">
      <div class="row py-2">
        <div class="col-4 mt-auto" >
          <%= sort_link(@q, :name) %>
        </div>
        <div class="col-4 mt-auto" >
          <%= sort_link(@q, :created_at) %>
        </div>
        <div class="col-4 d-flex justify-content-end" >
          <div><%= current_page_number(@makers) %></div>
          <%= link_to " + 追加", new_user_maker_path(@user), class: "btn btn-outline-primary" %>
        </div>
      </div>
      <%= render @makers %>
    </div>
    <div class="d-flex justify-content-end mt-3">
      <%= paginate @makers %>
    </div>
  </div>
<% end %>
