<% provide(:title, 'メーカーマスタ') %>
<ol class="breadcrumb">
  <li><%= link_to 'ホーム', root_path %></li>
  <li class="active">メーカーマスタ</li>
</ol>
<h1>メーカーマスタ</h1>
<%= render 'shared/search', q: @q, url: user_makers_path(@user), label: 'メーカー名' %>
<%= turbo_frame_tag "makers-list" do %>
  <%= current_page_number(@makers) %>
  
  <%# <%= link_to " + 追加", new_user_maker_path(@user), class: "btn btn-success", id: "add-maker" %>
  <div class="card shadow mt-3">
    <div class="card-header">
      一覧
    </div>
    <div class="card-body mx-3">
      <div class="row py-2">
        <div class="col-4 mt-auto" ><%= sort_link(@q, :name) %></div>
        <div class="col-4 mt-auto" ><%= sort_link(@q, :created_at) %></div>
        <div class="col-4 d-flex justify-content-end" ><p class="btn btn-outline-primary" id="add-maker"> + 追加</p></div>
      </div>
      <%= render @makers %>
    </div>
    <div class="text-right">
      <%= paginate @makers %>
    </div>
  </div>
<% end %>
