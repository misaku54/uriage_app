<% provide(:title, 'メーカーマスタ') %>
<nav style="--bs-breadcrumb-divider: '>';" aria-label="パンくずリスト">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to 'ホーム', root_path %></li>
    <li class="breadcrumb-item active" aria-current="page"><%= link_to 'メーカーマスタ', user_makers_path(@user) %></li>
  </ol>
</nav>
<h1>メーカーマスタ</h1>
<%= render 'shared/search', q: @q, url: user_makers_path(@user), label: 'メーカー名' %>
<div class="card mt-3">
  <div class="card-header">
    一覧
  </div>
  <div class="card-body">
    <div><%= current_page_number(@makers) %></div>
    <div class="table-responsive text-nowrap">
      <table class="table">
        <thead>
          <tr>
            <th>
              <%= sort_link(@q, :name) %>
            </th>
            <th>
              <%= sort_link(@q, :created_at) %>
            </th>
            <th>
              <div class="d-flex justify-content-end" >
                <%= link_to " + 追加", new_user_maker_path(@user), class: "btn btn-outline-primary" %>
              </div>
            </th>
          </tr>
        </thead>
        <tbody>
          <%= render @makers %>
        </tbody>
      </table>
    </div>
    <div class="d-flex justify-content-end mt-3">
      <%= paginate @makers %>
    </div>
  </div>
</div>
